<UserControl x:Class="XbimXplorer.LeftTabItme.LeftTabControls.MainFilterUControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XbimXplorer.LeftTabItme.LeftTabControls"
             x:Name="mainUControl"
             mc:Ignorable="d" >
    <Grid Background="White" VerticalAlignment="Stretch" Width="200" Margin="2,0,0,1" x:Name="gridMain" Visibility="{Binding ElementName=mainUControl,Path=Visibility}" >
        <TabControl Margin="0,0,1,1" BorderThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
            <TabItem Header="楼层" Height="25"></TabItem>
            <TabItem Header="类别" Height="25"></TabItem>
            <TabItem Header="文件" Height="25"></TabItem>
        </TabControl>
        <Button Height="25" Width="25" VerticalAlignment="Top" Content="X" HorizontalAlignment="Right" Click="Button_Click"></Button>
    </Grid>
</UserControl>
